            type: 'GET',
            dataType: 'text'
     }).done(function (ketqua) {
            var json = JSON.parse(ketqua);
            if (json.Success == "1") {
                alert("Thêm vào giỏ hàng thành công");
                location.reload();
                $('.cart').css({ 'opacity': '1' });
                $("#SoLuongGioHang").html(json.Message);
                return;
            }
            alert(json.Message);
        });
    }
</script>