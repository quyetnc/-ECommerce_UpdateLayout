@using (THUONGMAIDIENTUEntities db = new THUONGMAIDIENTUEntities())
{
    foreach (var category in db.CATEGORY_PRODUCT.ToList())
    {
        string link = "/dtdd/" + RemoveVietnamese.RemoveSign4VietnameseString(category.CategoryName).Replace(" ", "-") + "-" + category.IdCategory;

        <section class="products">
            <div class="container">
                <h2 class="h2 upp align-center">  @category.CategoryName </h2>
                <hr class="offset-lg">

                <div class="row">


                    @foreach (var product in db.PRODUCTs.Where(p => p.IdCategory == category.IdCategory).ToList())
                    {
                        try
                        {

                            string linkProduct = "/" + RemoveVietnamese.RemoveSign4VietnameseString(@product.ProductName).Replace(" ", "-") + "-" + product.IdProduct;

                            <div class="col-sm-6 col-md-3 product">
                                <div class="body">
                                    <a href="#favorites" class="favorites" data-favorite="inactive"><i class="ion-ios-heart-outline"></i></a>
                                    <a href="@linkProduct">
                                        <div style="height : 350px;align-items:center; justify-content:center; align-self:center">
                                            <img src="~/img/product/@product.PRODUCT_IMG.FirstOrDefault().Filename" alt="Apple iMac 27 Retina" />
                                        </div>
                                    </a>

                                    <div class="content align-center">
                                        <p class="price">$@product.ProductPrice</p>
                                        <h2 class="h3">@product.ProductName</h2>
                                        <hr class="offset-sm">

                                        <button class="btn btn-link"> <a href="@linkProduct"> <i class="ion-android-open"></i> Details </a></button>
                                        <button class="btn btn-primary btn-sm rounded" onclick="AddCart(@product.IdProduct)"> <i class="ion-bag"></i> Add to cart</button>
                                        <div class="fb-login-button" data-size="large" data-button-type="continue_with" data-layout="default" data-auto-logout-link="false" data-use-continue-as="false" data-width=""></div>
                                        <button class="g-recaptcha"
                                                data-sitekey="6Ldw0d8ZAAAAAJyc8nETMFPTuw0uJ_FOIu7hHzUk"
                                                data-callback='onSubmit'
                                                data-action='submit'>
                                            Submit
                                        </button>

                                    </div>
                                </div>
                            </div>}
                        catch (Exception ex)
                        {

                        }
                    }
                </div>

                <div class="align-right align-center-xs">
                    <hr class="offset-sm">
                    <a href="@link"> <h5 class="upp">View all @category.CategoryName </h5> </a>
                </div>
            </div>
        </section>}
}

